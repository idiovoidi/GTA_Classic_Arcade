class GameState {
    constructor() {
        this.currentState = 'menu';
        this.states = {
            menu: new MenuState(),
            playing: new PlayingState(),
            paused: new PausedState(),
            gameOver: new GameOverState()
        };
    }
    
    update(deltaTime) {
        this.states[this.currentState].update(deltaTime);
